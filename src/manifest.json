{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "description": "Browse the complete LEGO Shop bricks and pieces catalog, import BrickLink Wanted lists and auto fill the LEGO Shop shopping cart",
  "default_locale": "en",
  "permissions": [
    "tabs",
    "https://*.lego.com/*",
    "https://www.bricklink.com/*",
    "http://www.bricklink.com/*",
    "https://brickhunter.bricktwo.net/*",
    "http://brickhunter.bricktwo.net/*"
  ],
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "devtools_page": "devtools.html",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_extName__",
    "default_icon": {
      "16": "icons/icon_16.png",
      "24": "icons/icon_24.png",
      "32": "icons/icon_32.png"
    }
  }
}
