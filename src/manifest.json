{
  "name": "BrickHunter 2.0",
  "version": "1.0",
  "description": "Build an Extension with Angular",
  "manifest_version": 3,
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://*.lego.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Make this page red",
    "default_icon": {
      "16": "favicon.ico",
      "24": "favicon.ico",
      "32": "favicon.ico"
    }
  }
}
