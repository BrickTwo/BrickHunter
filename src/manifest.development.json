{
    "manifest_version": 3,
    "name": "BrickHunter",
    "description": "BrickHunter 2.0",
    "version": "2.0.0",
    "background": {
        "service_worker": "/js/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/js/content.js"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "action": {
        "default_title": "BrickHunter Popup"
    },
    "icons": {
        //"16": "icon16.png",
        //"48": "icon48.png",
        //"128": "icon128.png"
    }
}